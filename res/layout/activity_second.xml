<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context=".SecondActivity"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/boton_imagen_hacia_profile"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"
                android:background="@drawable/configuser"
                />
            
            <EditText android:id="@+id/text_field_busqueda_inicio"
                android:layout_height="match_parent"
                android:hint="@string/string_buscar"
                android:layout_weight=".6"
                android:layout_width="0dp" />

            <ImageButton
                android:id="@+id/boton_imagen_proceder_busqueda"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:background="@drawable/logoddflat"
                android:scaleType="centerInside"
                android:onClick="clickeadoAlBotonBusqueda"
                />
            
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight=".65"
            android:background="@drawable/border"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                />
            
                <ViewFlipper android:id="@+id/viewFlipperSecondActivity"
                    android:layout_height="match_parent"
        			android:layout_width="match_parent" >

			        <LinearLayout
			            android:layout_height="fill_parent"
			            android:layout_width="fill_parent"
			            android:orientation="vertical" >

			            <TextView android:layout_height="wrap_content"
		                      android:layout_width="fill_parent"
		                      android:text="Taxis"
		                      android:textSize="23sp"
		                      android:gravity="center_horizontal"/>
			        </LinearLayout>

			        <LinearLayout
			            android:layout_height="fill_parent"
			            android:layout_width="fill_parent"
			            android:orientation="vertical" >
			 
			            <TextView android:layout_height="wrap_content"
	        	              android:layout_width="fill_parent"
	            	          android:text="Eventos"
	                	      android:textSize="23sp"
	                    	  android:gravity="center_horizontal"/>
			        </LinearLayout>

			        <LinearLayout
			            android:layout_height="fill_parent"
			            android:layout_width="fill_parent"
			            android:orientation="vertical" >

			            <TextView android:layout_height="wrap_content"
		                      android:layout_width="fill_parent"
    		                  android:text="Reservas"
        		              android:textSize="23sp"
            		          android:gravity="center_horizontal"/>
			        </LinearLayout>
        
			        <LinearLayout
            		    android:layout_height="fill_parent"
		                android:layout_width="fill_parent"
		                android:orientation="vertical" >
	 
			            <TextView android:layout_height="wrap_content"
        	    		    android:layout_width="fill_parent"
            	    		android:text="Directorio"
		            	    android:textSize="23sp"
			                android:gravity="center_horizontal"/>
			       </LinearLayout>
 
			   </ViewFlipper>
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight=".25"
            android:orientation="horizontal" >
            
            <ImageButton
                android:id="@+id/boton_imagen_menu_principal_1"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/didirapidtaxi"
                android:background="@null"
                />
            
            <ImageButton
                android:id="@+id/boton_imagen_menu_principal_2"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/didirapidexpress"
                android:background="@null"
                />
            
            <ImageButton
                android:id="@+id/boton_imagen_menu_principal_3"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/didirapidprofesionales"
                android:background="@null"
                />
            
            <ImageButton
                android:id="@+id/boton_imagen_menu_principal_4"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/didirapidreparaciones"
                android:background="@null"
                />
            
            
        </LinearLayout>
        
        
        
</LinearLayout>