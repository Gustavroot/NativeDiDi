<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context=".MainActivity"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/boton_imagen_hacia_profile"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"
                android:background="@drawable/profile_button"
                />
            

            
            <EditText android:id="@+id/text_field_busqueda_inicio"
                android:layout_height="wrap_content"
                android:hint="@string/string_buscar"
                android:layout_weight=".6"
                android:layout_width="0dp" />

            <ImageButton
                android:id="@+id/boton_imagen_proceder_busqueda"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:background="@drawable/logo_dd"
                android:scaleType="centerCrop"
                android:onClick="haciaLaBusqueda"
                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight=".65"
            android:orientation="horizontal" >
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="haciaLaBusqueda"
                android:text="@string/app_name" />
                
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight=".25"
            android:orientation="horizontal" >
            
            <ImageButton
                android:id="@+id/boton_imagen_menu_principal_1"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:src="@drawable/logo_dd"
                />
            
            <ImageButton
                android:id="@+id/boton_imagen_menu_principal_2"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:src="@drawable/logo_dd"
                />
            
            <ImageButton
                android:id="@+id/boton_imagen_menu_principal_3"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:src="@drawable/logo_dd"
                />
            
            <ImageButton
                android:id="@+id/boton_imagen_menu_principal_4"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:src="@drawable/logo_dd"
                />
            
            
        </LinearLayout>
        
        
        
</LinearLayout>